{% if this.showcased %}
    <section class="sm:mt-24 sm:mb-12">
        <div class="grid">
            <div class="col-start-1 row-start-1">
                <div class="mx-auto max-w-7xl px-6 lg:px-8 blur-xs">
                    <div class="mx-auto grid max-w-2xl grid-cols-1 grid-rows-1 gap-8 mt-10 sm:grid-cols-2 xl:mx-0 xl:max-w-none xl:grid-flow-col xl:grid-cols-4 opacity-20 max-lg:hidden">

                        <twig:blog:ArticlePreviewPlaceholder wireframe showcased class="sm:col-span-2 xl:col-start-2 xl:row-end-1" />

                        <div class="space-y-8 xl:contents xl:space-y-0">
                            <div class="space-y-8 xl:row-span-2">
                                <twig:blog:ArticlePreviewPlaceholder wireframe />
                                <twig:blog:ArticlePreviewPlaceholder wireframe />
                            </div>
                            <div class="space-y-8 xl:row-start-1 max-xl:hidden">
                                <twig:blog:ArticlePreviewPlaceholder wireframe />
                                <twig:blog:ArticlePreviewPlaceholder wireframe />
                            </div>
                        </div>

                        <div class="space-y-8 xl:contents xl:space-y-0">
                            <div class="space-y-8 xl:row-start-1 xl:row-span-2">
                                <twig:blog:ArticlePreviewPlaceholder wireframe />
                                <twig:blog:ArticlePreviewPlaceholder wireframe />
                            </div>

                            <div class="space-y-8 xl:row-span-2 max-xl:hidden">
                                <twig:blog:ArticlePreviewPlaceholder wireframe />
                                <twig:blog:ArticlePreviewPlaceholder wireframe />
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-start-1 row-start-1 z-10 px-6 lg:px-8 flex flex-col item-center justify-center gap-y-16 h-[40rem]">
                <h2 class="mx-auto max-w-3xl text-balance text-center text-4xl font-bold tracking-tight text-slate-800 sm:text-6xl">
                    {{- 'home.blog.title'|trans|replace({
                        '<0>': '<a href="' ~ path('app_blog') ~ '" class="text-transparent font-extrabold bg-clip-text bg-gradient-to-r from-purple-500 to-blue-400">',
                        '</0>': '</a>',
                    })|raw -}}
                </h2>

                <twig:ArticlePreview :article="this.showcased" showcased lazy-load-image class="max-w-3xl mx-auto" />
            </div>
        </div>
    </section>
{% endif %}
