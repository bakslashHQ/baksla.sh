{% if this.showcased %}
    <section aria-label="blog overview" class="sm:mt-24 sm:mb-12">
        <div class="grid">
            <div class="col-start-1 row-start-1" aria-hidden="true">
                <div class="mx-auto max-w-7xl px-6 lg:px-8 blur-xs">
                    <div class="mx-auto grid max-w-2xl grid-cols-1 grid-rows-1 gap-8 mt-10 sm:grid-cols-2 xl:mx-0 xl:max-w-none xl:grid-flow-col xl:grid-cols-4 opacity-20 max-lg:hidden">

                        <twig:blog:ArticlePreviewPlaceholder wireframe showcased class="sm:col-span-2 xl:col-start-2 xl:row-end-1" />

                        <div class="space-y-8 xl:contents xl:space-y-0">
                            <div class="space-y-8 xl:row-span-2">
                                <twig:blog:ArticlePreviewPlaceholder wireframe />
                                <twig:blog:ArticlePreviewPlaceholder wireframe />
                            </div>
                            <div class="space-y-8 xl:row-start-1 max-xl:hidden">
                                <twig:blog:ArticlePreviewPlaceholder wireframe />
                                <twig:blog:ArticlePreviewPlaceholder wireframe />
                            </div>
                        </div>

                        <div class="space-y-8 xl:contents xl:space-y-0">
                            <div class="space-y-8 xl:row-start-1 xl:row-span-2">
                                <twig:blog:ArticlePreviewPlaceholder wireframe />
                                <twig:blog:ArticlePreviewPlaceholder wireframe />
                            </div>

                            <div class="space-y-8 xl:row-span-2 max-xl:hidden">
                                <twig:blog:ArticlePreviewPlaceholder wireframe />
                                <twig:blog:ArticlePreviewPlaceholder wireframe />
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-start-1 row-start-1 z-10 px-6 lg:px-8 flex flex-col item-center justify-center gap-y-16 h-[40rem]">
                <h2 class="mx-auto max-w-3xl text-balance text-center text-4xl font-bold tracking-tight text-slate-800 sm:text-6xl">
                    {{- 'home.blog.title'|trans|replace({
                        '<0>': '<span class="text-transparent font-extrabold bg-clip-text bg-gradient-to-r from-purple-500 to-blue-400">',
                        '</0>': '</span>',
                    })|raw -}}
                </h2>

                <article class="max-w-3xl mx-auto rounded-2xl bg-white p-6 shadow-2xl ring-2 cursor-pointer hover:ring-offset-1 hover:ring-4 transition ring-purple-100 hover:ring-purple-500 shadow-purple-500/20">
                    <a href="{{ path('app_blog_article', {id: this.showcased.id}) }}">
                        <h3 class="text-2xl font-semibold text-slate-900 p-3 sm:p-6 sm:text-3xl">{{ this.showcased.title }}</h3>
                        <p class="text-lg tracking-tight text-gray-900 px-3 sm:px-6 pb-4 sm:pb-6 sm:text-xl/8">{{ this.showcased.description }}</p>
                        <div class="flex flex-wrap items-center gap-x-4 gap-y-4 border-t border-gray-900/10 mx-3 sm:mx-6 pt-4 sm:py-4 sm:flex-nowrap">
                            <img class="size-12 flex-none rounded-full bg-gray-50" src="{{ asset('images/team/members/' ~ this.showcased.author.id.value ~ '.jpg') }}" alt="{{ this.showcased.author.fullName }}">
                            <div class="font-semibold">{{ this.showcased.author.fullName }}</div>
                        </div>
                    </a>
                </article>
            </div>
        </div>
    </section>
{% endif %}
