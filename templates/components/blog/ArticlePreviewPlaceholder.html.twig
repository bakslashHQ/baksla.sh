{% set wireframe = _context.wireframe is defined %}

{% if wireframe %}
    {% set color = random([
        'ring-indigo-500 shadow-indigo-500',
        'ring-blue-500 shadow-blue-500',
        'ring-purple-500 shadow-purple-500',
        'ring-violet-500 shadow-violet-500',
        'ring-blue-500 shadow-blue-500',
    ]) %}
    {% set placeholderColor = random([
        'bg-indigo-300',
        'bg-blue-300',
        'bg-purple-300',
        'bg-violet-300',
        'bg-blue-300',
    ]) %}
{% else %}
    {% set color = random([
        'ring-indigo-100 ring-indigo-100 shadow-indigo-500/20',
        'ring-blue-100 shadow-blue-500/20',
        'ring-purple-100 shadow-purple-500/20',
        'ring-violet-100 shadow-violet-500/20',
        'ring-blue-100 shadow-blue-500/20',
    ]) %}
    {% set placeholderColor = 'bg-gray-200' %}
{% endif %}

<article {{ attributes.defaults({
    class: 'rounded-2xl p-6 ' ~ color ~ (wireframe ? ' ring-4' : ' animate-pulse bg-white shadow-2xl ring-2'),
    'aria-hidden': true,
}) }}>
    <div class="h-4 {{ placeholderColor }} rounded-full w-40 mb-3 sm:mb-6"></div>
    <div class="h-2 {{ placeholderColor }} rounded-full max-w-[360px] mb-2.5"></div>
    <div class="h-2 {{ placeholderColor }} rounded-full mb-2.5"></div>
    <div class="h-2 {{ placeholderColor }} rounded-full max-w-[330px] mb-4 sm:mb-6"></div>
    <div class="mt-6 flex items-center">
        <svg class="w-10 h-10 me-3 text-gray-200 dark:text-gray-700" xmlns="http://www.w3.org/2000/svg" fill="currentColor" viewBox="0 0 20 20">
            <path d="M10 0a10 10 0 1 0 10 10A10.011 10.011 0 0 0 10 0Zm0 5a3 3 0 1 1 0 6 3 3 0 0 1 0-6Zm0 13a8.949 8.949 0 0 1-4.951-1.488A3.987 3.987 0 0 1 9 13h2a3.987 3.987 0 0 1 3.951 3.512A8.949 8.949 0 0 1 10 18Z"/>
        </svg>
        <div>
            <div class="h-2.5 {{ placeholderColor }} rounded-full dark:bg-gray-700 w-32 mb-2"></div>
            <div class="w-48 h-2 {{ placeholderColor }} rounded-full dark:bg-gray-700"></div>
        </div>
    </div>
</article>
