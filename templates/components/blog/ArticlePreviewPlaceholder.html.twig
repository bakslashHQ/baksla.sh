{% set color = random([
    'ring-indigo-100 shadow-indigo-500/20',
    'ring-blue-100 shadow-blue-500/20',
    'ring-purple-100 shadow-purple-500/20',
    'ring-violet-100 shadow-violet-500/20',
    'ring-blue-100 shadow-blue-500/20',
]) %}

<article {{ attributes.defaults({class: 'animate-pulse rounded-2xl bg-white p-6 shadow-2xl ring-2 ' ~ color}) }}>
