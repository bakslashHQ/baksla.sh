<div class="md:hidden font-article flex flex-col items-center justify-center mt-16">
    <p class="text-gray-600 font-semibold text-sm mb-4">{{ 'team.reviewers'|trans }} ({{ members|length }})</p>
    <div class="flex flex-row justify-center flex-wrap px-4">
        {% for member in members %}
        <img data-open-member-modal="{{ member.id.value }}" class="size-10 ring ring-gray-100 rounded-full bg-gray-50 cursor-pointer" src="{{ asset('images/team/members/' ~ member.id.value ~ '.jpg') }}" alt="{{ member.fullName }}" />
        {% endfor %}
    </div>
</div>

<div class="max-md:hidden font-article mr-4" data-test-reviewers>
    <div class="pb-4">
        <p class="text-gray-600 font-semibold text-sm mb-4">{{ 'team.reviewers'|trans }} ({{ members|length }})</p>
        <ul class="flex flex-col gap-y-2">
            {% for member in members %}
            <li data-open-member-modal="{{ member.id.value }}" class="flex flex-row gap-x-2 items-center cursor-pointer">
                <img class="size-6 rounded-full bg-gray-50" src="{{ asset('images/team/members/' ~ member.id.value ~ '.jpg') }}" alt="{{ member.fullName }}" />
                <p data-test-member-full-name class="text-sm text-gray-900 font-bold hover:underline hover:text-blue-500 whitespace-nowrap">{{ member.fullName }}</p>
            </li>
            {% endfor %}
        </ul>
    </div>
</div>
