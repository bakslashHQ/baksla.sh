{% macro kpi(name, value, icon, iconLabel, class = '') %}
    <div {% if class %}class="{{ class }}"{% endif %}>
        <div class="flex flex-col justify-center bg-gray-400/5 p-8">
            <span class="font-bold text-gray-800 tracking-tight text-4xl text-center">{{ value }}</span>
            <div class="flex flex-row justify-center">
                <div class="flex justify-center items-center whitespace-nowrap">
                    <twig:UX:Icon name="{{ icon }}" aria-label="{{ iconLabel }}" class="h-8 mr-2" />
                    <span class="font-medium text-gray-600 text-lg">{{ name }}</span>
                </div>
            </div>
        </div>
    </div>
{% endmacro %}

