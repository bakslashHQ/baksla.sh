{% extends 'pages/base.html.twig' %}

{% block title %}{{ 'home.seo.title'|trans|raw }}{% endblock %}

{% block seo %}
    <meta name="description" content="{{ 'home.seo.description'|trans|raw }}">

    <!-- Opengraph Meta Tags -->
    <meta property="og:url" content="{{ app.request.uri }}">
    <meta property="og:type" content="website">
    <meta property="og:title" content="{{ 'home.seo.title'|trans|raw }}">
    <meta property="og:description" content="{{ 'home.seo.description'|trans|raw }}">
    <meta property="og:image" content="{{ asset('images/bakslash.svg') }}">

    <!-- X Meta Tags -->
    <meta name="twitter:card" content="summary_large_image">
    <meta property="twitter:domain" content="{{ app.request.getSchemeAndHttpHost() }}">
    <meta property="twitter:url" content="{{ app.request.uri }}">
    <meta name="twitter:title" content="{{ 'home.seo.title'|trans|raw }}">
    <meta name="twitter:description" content="{{ 'home.seo.description'|trans|raw }}">
    <meta name="twitter:image" content="{{ asset('images/bakslash.svg') }}">
{% endblock %}

{% block content %}
    {% include 'pages/website/home/_hero.html.twig' %}
    {% include 'pages/website/home/_kpi.html.twig' %}
    {% include 'pages/website/home/_code.html.twig' %}
    {% include 'pages/website/home/_products.html.twig' %}
    {% include 'pages/website/home/_blog.html.twig' %}
    {% include 'pages/website/home/_partners.html.twig' %}
{% endblock %}
