{
  "files": {
    "includes": [
      "**",
      "!assets/vendor/*",
      "!assets/controllers.json",
      "!public/assets/*",
      "!public/bundles/*",
      "!var/*",
      "!vendor/*",
      "!composer.json"
    ]
  },
  "formatter": {
    "attributePosition": "auto",
    "indentStyle": "space",
    "indentWidth": 2,
    "lineWidth": 140
  },
  "javascript": {
    "formatter": {
      "quoteStyle": "single"
    }
  },
  "css": {
    "formatter": {
      "quoteStyle": "single"
    }
  }
}
